/* pages/malls/index.wxss */

.malls_tabbar{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}
.malls_tabbar_item{
    width: 30%;
    text-align: center;
}
.malls_tabbar_item image{
    width: 100%;
    height: 150rpx;
}
.malls_tabbar_item text{
    display: block;
     padding: 7px 0;
    font-size: 32rpx;
}
/* mallsshop */
.malls_shop{
    box-sizing: border-box;
    padding: 10rpx;
}
.malls_shop_title{
    box-sizing: border-box;
    font-size: 36rpx;
    padding: 10rpx ;
    font-weight: 600;
}
.malls_shop_list {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
}
.malls_shop_list shop-det{
    width: 44%;
    margin-top: 20rpx;
}