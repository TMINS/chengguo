/* pages/hotel-det/index.wxss */
@import '/utils/animateNew.wxss';
.active{
    background: #F68747;
    color: #fff;
}
/*  */
.search{
    display: flex;
    width: 576rpx;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #F68747;
    box-sizing: border-box;
    padding-left: 10rpx;
}
.search input{
    flex: 1;
    font-size: 32rpx;
}
.search_btn{
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #fff;
    background: #F68747;
    box-sizing: border-box;
    padding: 10rpx ;
}
/* 筛选 */
.select{
    display: flex;
    width: 576rpx;
    justify-content: space-between;
    font-size: 20rpx;
    padding: 32rpx 0 0 0;
    margin: 0 auto;
}
.select_item{
    width: 140rpx;
    position: relative;
    /* height: 32rpx; */
}
.select_opt{
    width: 138rpx;
    height: 32rpx;
    line-height: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items:   center;
    border: 1px solid #333;
}
.select_opt view:first-child{
    flex: 1;
    color: #333;
    font-size: 20rpx;
    border-right: 1px solid #333;
    /* padding: 4rpx 20rpx 4rpx 6rpx; */
    /* padding:0  20rpx  0 10rpx; */
    padding-left: 6rpx;
}
.select_img{
    width: 32rpx;
    height: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /* padding: 4rpx 6rpx 4rpx 0; */
}
.select_opt view image{
    width: 14rpx;
    height: 22rpx;
    transform: rotate(-90deg);
}
.isSelectImg{
    transform: rotate(180deg);
}
.select_list{
    /* display: none; */
    width: 132rpx;
    background: #fff;
    border: 1px solid #333;
    border-top: none;
    padding-left: 8rpx;
    position: absolute;
    left: 0;
    top: 36rpx;
}
.select_list view{
    line-height: 32rpx;
}
/*  */
.tabBar{
    display: flex;
    margin: 0 auto;
    align-items: center;
    padding: 22rpx 42rpx;
}
.tabBar_item{
    flex:1;
    text-align: center;
    font-size: 26rpx;
    line-height: 52rpx;
}
