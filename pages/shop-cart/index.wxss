/* pages/shop-cart/index.wxss */
.shop{
    width: 96%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 16rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    box-shadow: 6rpx 6rpx 8rpx #eee;
}

.shop_img{
    width: 60%;
    border-radius: 10rpx;
}
.shop_img image{
    width: 100%;
}
.shop_det{
    font-size: 32rpx;
    box-sizing: border-box;
    padding: 20rpx 16rpx;
}
.shop_det_price{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 0;
}
.price_color{
    color: #F90;
    font-weight: 600;
    font-size: 36rpx;
}
.shop_det_num{
    display: flex;
    align-items: center;
}
.reduce,.add{
    box-sizing: border-box;
    padding: 4rpx 16rpx;
    font-size: 40rpx;
}
.num{
    padding: 6rpx 20rpx;
    border: 1rpx solid #666;
}   

/*  */
.Total{
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background: #eee;
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 10rpx 20rpx;
    font-size: 30rpx;
}
.Total_sum{
    color: #F90;
    font-size: 44rpx;
    font-weight: 600;
}
.Total_delete{
    width: 50rpx;
}
.Total_delete image{
    width: 100%;
}
.Total .orderBtn{
    width: 290rpx;
    color: #fff;
    background: #F90;
    margin: 0;
}