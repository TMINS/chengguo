/* pages/order-list/index.wxss */
page{
    background: rgba(170, 165, 165, 0.1)
}
.live{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 28rpx 30rpx;
    background: #fff;
    margin-top: 6rpx;
}
.live_icon{
    width: 34rpx;
    height: 40rpx;
    padding-right: 26rpx;
}
.live_icon image{
    width: 34rpx;
    height: 40rpx;
}
.live_text{
    font-size: 28rpx;
    color: #292621;
}
.live_text_user text:first-child{
    font-size: 32rpx;
}
.live_text_det{
    line-height: 36rpx;
}
.live_icon_more{
    width: 14rpx;
    height: 40rpx;
    padding-left: 44rpx;
}
.live_icon_more image{
    width: 14rpx;
    height: 22rpx;
    transform: rotate(180deg);
}
/*  */
.bj_line{
    width: 100%;
    height: 6rpx;
}
.bj_line image{
    display: block;
    height: 6rpx;
}
/*  */
.shop{
    height: 240rpx;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    background: #fff;
    margin-top: 22rpx;
}
.shop_img{
    width: 180rpx;
    padding: 15rpx;
    box-sizing: border-box;
}
.shop_img image{
    display: block;
    width: 180rpx;
    height: 180rpx;
}
.shop_text{
    width: 364rpx;
}
.shop_title{
    font-size: 28rpx;
    line-height: 42rpx;
    letter-spacing: 4rpx;
}
.shop_price{
    display: flex;
    padding-top: 78rpx;
}
.shop_now{
    font-size:  32rpx;
    color: #292621;
    line-height: 26rpx;
}
.shop_former{
    padding-left: 26rpx;
    font-size: 24rpx;
    color: #8A857C;
    text-decoration: line-through;
}
/*  */
.fashion{
    margin-top: 18rpx;
    padding: 0 30rpx;
    background: #fff;
    font-size: 28rpx; 
}
.fashion_item{
    display: flex;
    align-items: center;
    height: 88rpx;
    border-bottom:  1px dashed #000;
}
.fashion_title{
    color: #292621;
}
.buy_num{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.buy_num_option{
    display: flex;
    align-items: center;
}
.num{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    border: 1px solid #000;
    text-align: center;
}
.reduce{
    padding-right: 14rpx;
}
.add{
    padding-left: 14rpx;
}
.delivery{
    justify-content: space-between;
}
.delivery_option{
    display: flex;
    align-items:center ;
}
.delivery_option image{
    display: block;
    width: 20rpx;
    height: 36rpx;
    transform: rotate(180deg);
    margin-left: 16rpx;
}
.remark_inp{
    flex: 1;
    padding-left: 60rpx;
}
/* 底部按钮 */
.Submission {
    width: 100%;
    height: 92rpx;
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    bottom: 0;
}

.money {
    width: 50%;
    text-align: center;
    line-height: 92rpx;
    font-size: 32rpx;
    background: #fff;
}
.money text{
    color: #F68747;
}

.shop_order {
    width: 50%;
    color: #fff;
    background: #f68747;
    text-align: center;
    line-height: 92rpx;
    font-size: 34rpx;
}
