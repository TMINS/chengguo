/* pages/comment/index.wxss */

.comment {
    display: flex;
    width: 96%;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.6);
}
.comment_img {
    display: inline-block;
    width: 400rpx;
}
.comment_title {
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    padding: 20rpx 0;
}
.comment_title text:first-child {
    font-size: 36rpx;
    font-weight: 600;
}
.comment_star {
    font-size: 30rpx;
    padding: 10rpx 0;
    display: flex;
    align-items: center;
}
.comment_star image {
    width: 40rpx;
    height: 40rpx;
}
.comment_massage_text {
    font-size: 32rpx;
}
